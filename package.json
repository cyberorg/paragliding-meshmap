    "@bufbuild/protobuf": "^1.10.0",
    "@swc/core": "^1.6.13",
    "async-mqtt": "^2.6.3",
    "body-parser": "^1.20.2",
    "commander": "^12.1.0",
    "compression": "^1.7.4",
    "concurrently": "^8.2.2",
    "debug": "^4.3.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mysql": "^2.18.1",
    "p-queue": "^8.0.1",
    "p-retry": "^6.2.0",
    "pg": "^8.12.0",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "supports-color": "^9.4.0",
    "ts-node": "^10.9.2",
