{
  "name": "paragliding-meshmap",
  "type": "module",
  "scripts": {
    "clean": "rm -rf build frontend/dist",
    "build": "npm run clean && tsc --noEmit && cd frontend && tsc -b && vite build --mode production",
    "start": "concurrently \"nodemon --exec node --loader ts-node/esm src/index.ts\" \"cd frontend && vite dev\"",
    "mqtt": "nodemon --exec node --loader ts-node/esm src/mqtt.ts --",
    "prod": "NODE_ENV=production npm run migrate && NODE_ENV=production concurrently \"node --loader ts-node/esm src/index.ts\" \"node --loader ts-node/esm src/mqtt.ts\"",
    "lint": "eslint .",
    "format": "prettier --write .",
    "fmt": "npm run format",
    "typeorm": "typeorm-ts-node-esm",
    "migrate": "typeorm-ts-node-esm migration:run -d src/config/data-source.ts",
    "schema-to-ts": "bin/schema-to-ts",
    "docker:build": "NODE_ENV=production npm run build && docker build . --progress plain --tag paragliding-meshmap:$(git log -1  --pretty=format:%cd --date=format:%Y-%m-%d_%H-%M)_$(git rev-parse --short HEAD) --tag paragliding-meshmap"
  },
  "imports": {
    "#entity/*": "./src/entity/*.ts",
    "#migrations/*": "./src/migration/*.ts",
    "#mqtt/*": "./src/mqtt/*.ts",
    "#config/*": "./src/config/*.ts",
    "#helpers/*": "./src/helpers/*.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@rmp135/sql-ts": "^2.1.0",
    "@tailwindcss/forms": "^0.5.7",
    "@types/compression": "^1.7.5",
    "@types/debug": "^4.1.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/leaflet": "^1.9.12",
    "@types/leaflet-groupedlayercontrol": "^0.6.4",
    "@types/leaflet.markercluster": "^1.5.4",
    "@types/lodash": "^4.17.6",
    "@types/luxon": "^3.4.2",
    "@types/mysql": "^2.15.26",
    "@types/node": "^20.14.10",
    "@types/nodemon": "^1.19.6",
    "@types/pg": "^8.11.6",
    "@types/pluralize": "^0.0.33",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "cooltipz-css": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "globals": "^15.8.0",
    "leaflet": "^1.9.4",
    "leaflet-arrowheads": "^1.4.0",
    "leaflet-geometryutil": "^0.10.3",
    "leaflet-groupedlayercontrol": "^0.6.1",
    "leaflet-polylineoffset": "^1.1.1",
    "leaflet.markercluster": "^1.5.3",
    "lodash": "^4.17.21",
    "luxon": "^3.4.4",
    "nodemon": "^3.1.4",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sass": "^1.77.6",
    "tailwindcss": "^3.4.4",
    "typescript-eslint": "^7.15.0",
    "vite": "^5.3.3",
    "vite-plugin-inspect": "^0.8.4"
  },
  "dependencies": {
